extends layout

block content
  h1= title
  p Welcome to #{title}

  table
        tbody
          tr
            th #
            th Card
          each item in data
           tr
             td #{item['multiverseid']}


             if pageCount > 1
                    ul.pagination
                     if currentPage > 1
                      li
                       a(href='/?page=1')  &laquo;
                     - var x = 1
                     if currentPage > 5
                      - x = x + (currentPage - 4)
                     if (x !== 1)
                        li.disabled
                           a(href='#') ...
                     - for (x; x <= pageCount; x++)
                        if( currentPage == x)
                         li.active
                            span.sr_only
                                = currentPage
                        else
                          li
                            a(href= "/?page="+x )
                             = x
                        if x == (currentPage + 4)
                            li.disabled
                             a(href="#") ...
                             - break
                     if currentPage != pageCount
                     li
                         a(href= "/?page=#{Math.floor(pageCount)}" ) &raquo;
